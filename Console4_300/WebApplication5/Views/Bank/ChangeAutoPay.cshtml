@model WebApplication5.Models.UserBankAccount

<h4>UserAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form  asp-action="ChangeAutoPay" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="UserAccountId" class="form-control" hidden/>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAutoPayAllowed" /> @Html.DisplayNameFor(model => model.IsAutoPayAllowed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AutoPaySensorId" class="control-label"></label>
                <input asp-for="AutoPaySensorId" class="form-control" />
                <span asp-validation-for="AutoPaySensorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
